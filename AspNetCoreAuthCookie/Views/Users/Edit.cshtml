@model AspNetCoreAuthCookie.Models.User

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserId" />
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            @*closed-fixed não permite altear o campo, type="hidden" ouculta o campo*@
            @*<div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" closed-fixed type="hidden" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>*@          
            <br />
            <div class="form-inline">
                <div class="form-group mb-2">
                    @*<label>Editar Senha</label>*@ 
                    <div class="form-group mx-sm-3 mb-2">
                        <a asp-controller="Users" asp-action="EditPassword" asp-route-id="@Model.UserId" class="btn btn-primary btn-sm">Edit Password: @Model.UserName</a>
                    </div>
                </div>               
            </div>
            <br />
            <div class="form-group">
                <label asp-for="UserTypes" class="control-label"></label>
                <select asp-for="UserTypes" asp-items="Html.GetEnumSelectList<UserType>()" class="form-control"></select>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="ActiveUser" /> @Html.DisplayNameFor(model => model.ActiveUser)
                    </label>
                </div>
            </div>       
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success btn-sm" /> |
                <a asp-action="Index" class="btn btn-default btn-sm">Back to List</a>
            </div>
        </form>
    </div>
</div>



